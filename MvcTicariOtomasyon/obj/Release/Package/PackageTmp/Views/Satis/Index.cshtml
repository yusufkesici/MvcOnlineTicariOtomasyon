@using MvcTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table id="tbl1" class="table table-striped ">
    <thead>
        <tr>
            <th class="text text-center">ID</th>
            <th class="text text-center">Ürün</th>
            <th class="text text-center">Cari</th>
            <th class="text text-center">Personel</th>
            <th class="text text-center">Adet</th>
            <th class="text text-center">Fiyat</th>
            <th class="text text-center">Toplam Tutar</th>
            <th class="text text-center">Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>


        </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr>
                <td class="text text-center">@item.SatisID </td>
                <td class="text text-center">@item.Urun.UrunAd </td>
                <td class="text text-center">@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
                <td class="text text-center">@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                <td class="text text-center">@item.Adet</td>
                <td class="text text-center">@item.Fiyat</td>
                <td class="text text-center">@item.ToplamTutar</td>
                <td class="text text-center">@item.Tarih</td>

                <td>

                    <a href="/Satis/SatisGüncelle/@item.SatisID" class="btn btn-info ">Güncelle</a>

                </td>
                <td>
                    <a href="/Satis/SatisDetay/@item.SatisID" class="btn btn-default " style="background-color:lightcoral;color:white">Detay</a>

                </td>

            </tr>

        }
    </tbody>
</table>
<a href="/Satis/SatisEkle" class="btn btn-info" style="margin:20px">Yeni Satış Yap</a>










<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

