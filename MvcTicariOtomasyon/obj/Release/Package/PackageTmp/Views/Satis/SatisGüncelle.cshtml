@model MvcTicariOtomasyon.Models.Sınıflar.SatisHareket
@{
    ViewBag.Title = "SatisGüncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Satış Güncelle</h2>
<hr />

@using (Html.BeginForm("SatisGüncelle", "Satis", FormMethod.Post))
{
    @Html.HiddenFor(x => x.SatisID)

    @Html.Label("Ürün")
    @Html.TextBoxFor(x => x.Urun.UrunAd, new { disabled = "true", @class = "form-control", @placeholder = "Adet", @style = "margin-bottom:5px" })
    @Html.HiddenFor(x=>x.UrunID)
    @*@Html.DropDownListFor(x => x.UrunID, (List<SelectListItem>)ViewBag.urunler, new { @class = "form-control", @style = "margin-bottom:5px" })*@
    @Html.Label("Cari Adı")

    @Html.DropDownListFor(x => x.CariID, (List<SelectListItem>)ViewBag.cariler, new { @class = "form-control", @style = "margin-bottom:5px" })
    @Html.Label("Personel Adı")

    @Html.DropDownListFor(x => x.PersonelID, (List<SelectListItem>)ViewBag.personeller, new { @class = "form-control", @style = "margin-bottom:5px" })



    @Html.Label("Satın Alınacak Adet")


    @Html.TextBoxFor(x => x.Adet, new { @class = "form-control", @placeholder = "Adet", @style = "margin-bottom:5px" })
    if (ViewBag.göster == false)
    {
        <div class="alert alert-danger" role="alert">
            Stok Miktarından Fazla Adet Girdiniz!
        </div>
    }
    @Html.Label("Fiyatı")

    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control", @placeholder = "Fiyat", @style = "margin-bottom:5px" })
    @Html.Label("Toplam Tutarı")

    @Html.TextBoxFor(x => x.ToplamTutar, new { @class = "form-control", @placeholder = "ToplamTutar", @style = "margin-bottom:5px" })



    <br />
    <button class="btn btn-primary" type="submit">Satışı Güncelle</button>
}


