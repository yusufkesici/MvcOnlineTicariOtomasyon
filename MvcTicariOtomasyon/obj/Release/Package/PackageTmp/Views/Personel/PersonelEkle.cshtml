@model MvcTicariOtomasyon.Models.Sınıflar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Personel Ekle</h2>
<hr />
@using (Html.BeginForm("PersonelEkle", "Personel", FormMethod.Post))
{
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control", @placeholder = "Adı", @style = "margin-bottom:5px" })

    @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control", @placeholder = "Soyadı", @style = "margin-bottom:5px" })

    @Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control", @placeholder = "Görsel", @style = "margin-bottom:5px" })

    @Html.DropDownListFor(x => x.DepartmanID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control", @style = "margin-bottom:5px" })
    <br />

    <button class="btn btn-default" style="background-color:coral;color:white" type="submit">Ekle</button>
}

