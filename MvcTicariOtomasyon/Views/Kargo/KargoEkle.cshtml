@using MvcTicariOtomasyon.Models.Sınıflar
@model KargoDetay
@{
    ViewBag.Title = "KargoEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<br />
<h2>Kargo Ekle</h2>

<hr />
@using (Html.BeginForm("KargoEkle", "Kargo", FormMethod.Post))
{
 
    <input type="text" name="TakipKodu" class="form-control" value="@ViewBag.takipkod" readonly/>
    <br />
    @Html.TextBoxFor(x => x.Personel, new { @class = "form-control", @placeholder = "Personel" })
    <br />
    @Html.TextBoxFor(x => x.Alici, new { @class = "form-control", @placeholder = "Alıcı" })
    <br />
    <input type="date" name="Tarih" class="form-control" />
    <br />
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", @placeholder = "Açıklama" })
    <br />

    <button class="btn btn-default" id="btn1" style="background-color:coral;color:white" type="submit">Ekle</button>

    <script>
        $('#btn1').click(function () {

            swal({
                icon: "success",
                title: "Kargo Ekleme Başarılı",
            });
     
        });
    </script>
}

