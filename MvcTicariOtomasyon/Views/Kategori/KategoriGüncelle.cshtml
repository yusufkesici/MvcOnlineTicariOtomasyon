@using MvcTicariOtomasyon.Models.Sınıflar
@model Kategori
@{
    ViewBag.Title = "KategoriGüncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Kategori Güncelle</h2>
<hr />

@using (Html.BeginForm("KategoriGüncelle", "Kategori", FormMethod.Post))
{

    @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control", @placeholder = "Kategori Adı" })
    @Html.HiddenFor(x=>x.KategoriID)
    <br />
    <button class="btn btn-success" type="submit">Güncelle</button>
}
