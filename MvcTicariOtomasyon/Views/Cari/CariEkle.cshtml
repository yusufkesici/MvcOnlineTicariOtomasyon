@using MvcTicariOtomasyon.Models.Sınıflar
@model Cariler
@{
    ViewBag.Title = "CariEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Cari Ekle</h2>
<hr />
@using (Html.BeginForm("CariEkle", "Cari", FormMethod.Post))
{
    @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control", @placeholder = "Adı", @style = "margin-bottom:5px" })
    @Html.ValidationMessageFor(x => x.CariAd, "", new { @style = "color:red" })
    @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control", @placeholder = "Soyadı", @style = "margin-bottom:5px" })
    @Html.ValidationMessageFor(x => x.CariSoyad, "", new { @style = "color:red" })
    @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control", @placeholder = "Şehir", @style = "margin-bottom:5px" })
    @Html.ValidationMessageFor(x => x.CariSehir, "", new { @style = "color:red" })
    @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control", @placeholder = "Mail", @style = "margin-bottom:5px" })
    <br />

    <button class="btn btn-default" style="background-color:coral;color:white" type="submit">Ekle</button>
}

